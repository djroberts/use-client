{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "jsx": "react",
    "noImplicitAny": false,
    "lib": ["dom", "es2017"],
    "typeRoots": ["./node_modules/@types"],
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["src/__tests__/**/*.ts", "src/__tests__/**/*.tsx"]
}
